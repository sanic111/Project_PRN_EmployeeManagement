<Window x:Class="WPFApp.UserAccountManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="UserAccountManagement" Height="450" Width="800">
    <Grid>
        <StackPanel Grid.Column="0" Background="#EAEAEA" Margin="5,5,605,5">
            <Button x:Name="CreateNewAccount" Content="Create New Account" Height="40" Margin="5"
                Background="#007ACC" Foreground="White" FontWeight="Bold"/>
            <Button x:Name="EditExistedAccount" Content="Edit Existed Account" Height="40" Margin="5"
                Background="#007ACC" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
        <Border BorderBrush="#007ACC" BorderThickness="2" Margin="205,5,5,5">
            <TextBlock Text="Users Account Management" HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="10" FontSize="16" FontWeight="Bold"/>
        </Border>

    </Grid>
</Window>
