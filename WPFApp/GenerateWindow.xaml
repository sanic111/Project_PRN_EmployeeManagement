<Window x:Class="WPFApp.GenerateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="GenerateWindow" Height="450" Width="800">
    <Grid>

        <Button Content="General Report"
             Name="btnGeneral"
             Click="btnGeneral_Click"
             HorizontalAlignment="Left"
             Margin="135,160,0,0"
             VerticalAlignment="Top"
             Width="95"
             Height="57" />
        <Button Content="Personal Report"
             Name="btnPersonal"
             Click="btnPersonal_Click"
             HorizontalAlignment="Left"
             Margin="568,160,0,0"
             VerticalAlignment="Top"
             RenderTransformOrigin="0.488,0.592"
             Height="57"
             Width="94" />
        <TextBlock HorizontalAlignment="Left"
                Height="68"
                Margin="112,32,0,0"
                TextWrapping="Wrap"
                Text="PLEASE CHOOSE THE TYPE OF REPORTS TO GENERATE" 
                TextAlignment="Center"
                Foreground="Red"
                FontSize="22"
                VerticalAlignment="Top"
                Width="570" />

    </Grid>
</Window>
