<Window x:Class="WPFApp.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="ReportWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name ="dgData" SelectionChanged="dgData_SelectionChanged"
              Margin="0,0,0,75" ColumnWidth="*"/>
        <Button Content="Generate" FontSize="20" Click="btnGenerate_Click"
            HorizontalAlignment="Left" x:Name="btnGenerate"
            Margin="328,383,0,0"
            VerticalAlignment="Top"
            Width="110"
            Height="28"
            Background="#FFD6EFF3"
            FontFamily="Arial Narrow" />

    </Grid>
</Window>
